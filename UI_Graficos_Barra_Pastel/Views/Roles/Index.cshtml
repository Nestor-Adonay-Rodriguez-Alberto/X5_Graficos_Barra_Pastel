@model IEnumerable<Entidades.Rol>

@{
    ViewData["Title"] = "Index";
}

<h1>Registro De Roles</h1><br />

<p>
    <a asp-action="Create">Nuevo Rol</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nombre Del Rol:")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdRol">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdRol">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdRol">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
